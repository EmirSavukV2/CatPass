'use client';

import { useexport default function SecretModal({ 
  open, 
  onOpenChange, 
  onSave, 
  initialData,
  isEditing = false,
  projectId,
  groupId,
  selectedCollection
}: SecretModalProps) {eEffect } from 'react';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Textarea } from '@/components/ui/textarea';
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogFooter,
  DialogHeader,
  DialogTitle,
} from '@/components/ui/dialog';
import { SecretData, Collection } from '@/types';
import { useCollections } from '@/hooks/use-collections';

interface SecretModalProps {
  open: boolean;
  onOpenChange: (open: boolean) => void;
  onSave: (secretData: SecretData & { collectionId?: string }) => Promise<void>;
  initialData?: SecretData & { collectionId?: string };
  isEditing?: boolean;
  projectId?: string;
  groupId?: string;
  selectedCollection?: string;
}

export function SecretModal({ 
  open, 
  onOpenChange, 
  onSave, 
  initialData,
  isEditing = false,
  projectId,
  groupId
}: SecretModalProps) {
  const [formData, setFormData] = useState<SecretData & { collectionId?: string }>({
    name: '',
    username: '',
    password: '',
    url: '',
    notes: '',
    collectionId: ''
  });
  const [isLoading, setIsLoading] = useState(false);
  const [showPassword, setShowPassword] = useState(false);
  
  // Fetch collections for this project/group
  const { collections } = useCollections(projectId, groupId);

  // Update form data when initialData changes or modal opens
  useEffect(() => {
    if (open) {
      if (initialData) {
        setFormData(initialData);
      } else {
        setFormData({
          name: '',
          username: '',
          password: '',
          url: '',
          notes: '',
          collectionId: ''
        });
      }
    }
  }, [initialData, open]);

  const handleInputChange = (field: keyof (SecretData & { collectionId?: string }), value: string) => {
    setFormData(prev => ({ ...prev, [field]: value }));
  };

  const generatePassword = () => {
    const charset = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*';
    let password = '';
    for (let i = 0; i < 16; i++) {
      password += charset.charAt(Math.floor(Math.random() * charset.length));
    }
    setFormData(prev => ({ ...prev, password }));
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setIsLoading(true);

    try {
      await onSave(formData);
      onOpenChange(false);
      if (!isEditing) {
        setFormData({
          name: '',
          username: '',
          password: '',
          url: '',
          notes: '',
          collectionId: ''
        });
      }
    } catch (error) {
      console.error('Error saving secret:', error);
    } finally {
      setIsLoading(false);
    }
  };

  return (
    <Dialog open={open} onOpenChange={onOpenChange}>
      <DialogContent className="sm:max-w-[425px]">
        <DialogHeader>
          <DialogTitle>
            {isEditing ? 'Edit Secret' : 'Add New Secret'}
          </DialogTitle>
          <DialogDescription>
            {isEditing 
              ? 'Update your secret information below.'
              : 'Enter the details for your new secret below.'
            }
          </DialogDescription>
        </DialogHeader>
        <form onSubmit={handleSubmit}>
          <div className="grid gap-4 py-4">
            <div className="grid gap-2">
              <Label htmlFor="name">Name *</Label>
              <Input
                id="name"
                value={formData.name}
                onChange={(e) => handleInputChange('name', e.target.value)}
                placeholder="e.g., Gmail Account"
                required
              />
            </div>
            
            {collections.length > 0 && (
              <div className="grid gap-2">
                <Label htmlFor="collection">Koleksiyon (Opsiyonel)</Label>
                <select
                  id="collection"
                  value={formData.collectionId || ''}
                  onChange={(e) => handleInputChange('collectionId', e.target.value)}
                  className="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                >
                  <option value="">Koleksiyon se√ßmeyiniz</option>
                  {collections.map((collection) => (
                    <option key={collection.id} value={collection.id}>
                      {collection.name}
                    </option>
                  ))}
                </select>
              </div>
            )}
            
            <div className="grid gap-2">
              <Label htmlFor="username">Username/Email</Label>
              <Input
                id="username"
                value={formData.username}
                onChange={(e) => handleInputChange('username', e.target.value)}
                placeholder="e.g., john@example.com"
              />
            </div>
            <div className="grid gap-2">
              <Label htmlFor="password">Password *</Label>
              <div className="flex gap-2">
                <Input
                  id="password"
                  type={showPassword ? 'text' : 'password'}
                  value={formData.password}
                  onChange={(e) => handleInputChange('password', e.target.value)}
                  placeholder="Enter password"
                  required
                  className="flex-1"
                />
                <Button
                  type="button"
                  variant="outline"
                  onClick={() => setShowPassword(!showPassword)}
                  className="px-3"
                >
                  {showPassword ? 'üëÅÔ∏è‚Äçüó®Ô∏è' : 'üëÅÔ∏è'}
                </Button>
                <Button
                  type="button"
                  variant="outline"
                  onClick={generatePassword}
                  className="px-3"
                >
                  üé≤
                </Button>
              </div>
            </div>
            <div className="grid gap-2">
              <Label htmlFor="url">URL</Label>
              <Input
                id="url"
                value={formData.url || ''}
                onChange={(e) => handleInputChange('url', e.target.value)}
                placeholder="https://example.com"
              />
            </div>
            <div className="grid gap-2">
              <Label htmlFor="notes">Notes</Label>
              <Textarea
                id="notes"
                value={formData.notes || ''}
                onChange={(e) => handleInputChange('notes', e.target.value)}
                placeholder="Additional notes..."
                rows={3}
              />
            </div>
          </div>
          <DialogFooter>
            <Button
              type="button"
              variant="outline"
              onClick={() => onOpenChange(false)}
              disabled={isLoading}
            >
              Cancel
            </Button>
            <Button type="submit" disabled={isLoading}>
              {isLoading ? 'Saving...' : (isEditing ? 'Update' : 'Save')}
            </Button>
          </DialogFooter>
        </form>
      </DialogContent>
    </Dialog>
  );
}
